<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/load_more_footer_height"
    android:gravity="center"
    android:orientation="horizontal" >

    <ProgressBar
        android:id="@+id/load_more_footer_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/load_more_progress_bar_height" />

    <TextView
        android:id="@+id/load_more_footer_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="@string/load_more_footer_text"
        android:textColor="@color/perkin_selected_dark_blue"
        android:textSize="@dimen/default_font_size_small" />

</LinearLayout>