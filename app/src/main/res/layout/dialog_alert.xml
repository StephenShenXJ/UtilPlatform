<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:padding="@dimen/alert_dialog_padding">

    <ProgressBar
        android:id="@+id/image_view_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        style="@style/ProgressStyle"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/alert_dialog_text_margin"
        android:layout_marginRight="@dimen/alert_dialog_text_margin"
        android:layout_toRightOf="@id/image_view_loading"
        android:ellipsize="none"
        android:maxLines="2"
        android:padding="@dimen/alert_dialog_text_view_padding"
        android:singleLine="false"
        android:text="@string/progress_loading"
        android:textColor="@color/perkin_selected_dark_blue"
        android:textSize="@dimen/alert_dialog_text_size" />

</RelativeLayout>